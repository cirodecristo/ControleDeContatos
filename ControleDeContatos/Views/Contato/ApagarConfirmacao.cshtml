@model ContatoModel;
@{
    ViewData["Title"] = "Confirmação para apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato? (@Model.Nome)</h3>
</div>

<a class="btn btn-primary col-12" role="button" asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger col-12" role="button"asp-controller="Contato" asp-route-itemid="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>